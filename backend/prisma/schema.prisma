generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int          @id @default(autoincrement())
  email    String       @unique
  name     String?
  password String
  username String       @unique
  workout  Activities[]
  muscleMass BigInt?
  muscleMassTrend String?
  stress BigInt?
  stressDesc String?
  heartRateResting BigInt?
  heartRateAverage BigInt?
}

model Pet {
  id       Int    @id @default(autoincrement())
  name     String @unique
  hp       Float
  exp      Float
  level    BigInt
  strength Float
  health   Float
}

model Activities {
  id          Int         @id @default(autoincrement())
  userId      Int
  type        WorkoutType
  description String?
  count       BigInt?
  goal        BigInt?
  resting     BigInt?
  average     BigInt?
  percentage  BigInt?
  runningDays BigInt?
  createdAt   DateTime    @default(now())
  finishedAt  DateTime
  user        User        @relation(fields: [userId], references: [id])
}

enum WorkoutType {
  running
  walking
  gyming
  sleeping
  steps
}
